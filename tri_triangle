n=int(input())
for i in range(1,n+1):
    k=1
    for j in range(i,n+1):

        print(k,end="")
        k=k+1
    for k in range(1,(2*i-2)+1):
        print("*",end="")
    k=n
    for l in range(i,n+1):
        print(k,end="")
        k-=1
    print("\n")
input=5
output:
1234554321
1234**5432
123****543
12******54
1********5
